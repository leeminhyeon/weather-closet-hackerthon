  <head>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/mypage.css" >
    <title>My Closet</title>
  </head>
  <body>
    <div class="container">
      <!--Profile-->
      <!-- user info -->
      <section class="user profile">
      <div class="py-3 row">
        <div class="col-12 col-lg-6 offset-xl-2 col-xl-4 d-flex flex-row">
          <div class="col-3 d-flex flex-column justify-content-center">
            <p>프로필사진</p>
          </div>
          <div class="col-9 d-flex flex-column justify-content-center">
            <span class="mb-1">이름
                <a class="ml-1" href="/home/setting">
                  <i class="fa fa-cog" aria-hidden="true"></i></a>
            </span>
            <span class="small mb-1 font-weight-light">거주지역 : </span>
            <span class="small mb-1">스타일 : </span>
          </div>
        </div>
      </div>
      </section>
    <!-- 내 옷장 사진들 -->
    <div class="row">
          <div class="col-12">
            <br>
            <h4>My Closet</h4> <br>
            <hr>
          </div>
    </div>
    
     
    <div class="row">
      <div class="col-11"></div>
      <div class="col-1">
          <!-- Button trigger modal -->
          <button class="btn btn-outline-primary" data-target="#layerpop" data-toggle="modal">Upload</button>
      </div>
    </div>
    <br>
    <!-- 나중에는 루비 반복문으로 돌려야함 -->
