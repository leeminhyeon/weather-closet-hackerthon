  <body>
    <div class="container">
      <!--We closet-->
      <div class="row">
            <div class="col-12">
              <br>
              <h4 class="text-center">Our Closet</h4> <br>
            </div>
      </div>
      
      <% @posts.each do |post| %>
      <% if post.show_attribute == true %>
        
        <div class="row mb-5 no-gutters">
          
          <div class="col-4 clst">
            <% if post.image.url.nil? %>
             <%= image_tag("logo_.png") %>
           <% else %>
             <%= image_tag post.image.url, :class => "upload-img"%>
           <% end %>
          <!--<img class="upload-img" src="" alt="업로드 사진" >-->
            <div class="overlay">
              <div class="text justify-content-center">
                <i class="like fa fa-heart"></i>
                <i class="comment fa fa-commenting-o"></i>
              <% if current_user.is_like?(post) %>
                    <%= link_to "좋아요 취소", post_like_path(post), method: "post" %>
              <% else %>
                  <%= link_to "좋아요", post_like_path(post), method: "post" %>
              <% end %>
              </div>
            </div>
            <div class="row mt-2 justify-content-center">
              <% if post.likes.size == 0 %>
              <p><%= post.likes.size %> 명이 좋아합니다.</p>
              <% else %>
              <p><%= post.likes_count %> 명이 좋아합니다.</p>
              <% end %>
              <i class="heart fa fa-heart-o fa-2x"></i>
              <i class="star fa fa-star-o fa-2x"></i>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      
