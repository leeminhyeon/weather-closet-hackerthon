<head>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/show.css" >
    <title>My Closet</title>
</head>
<body>
<div class="container">
    <div class="row">
    <div class="col-6">
        <img class="show-img" src="<%= @post.image.url %>" alt="업로드 사진" >
    </div>
    <div class="col-6">
    <div class="row">
        
    <div class="col-4 d-flex flex-column">
            <div class="prof-img">
                <p>프로필사진</p>
            </div>
        </div>
    <div class="col-8 d-flex flex-column">
            <span class="mb-1"><%= current_user.name %> </span>
            <span class="small mb-1">거주지역 : </span>
            <span class="small mb-1">스타일 : </span>
           
    </div>
    </div>
    
    <p><%= @post.content %></p>
    <p>outer :<%= @post.outer %> </p>
    <p>top : <%= @post.top %></p>
    <p>bottom : <%= @post.bottom %></p>
    <p>dress : <%= @post.dress %></p>
    <p>etc : <%= @post.etc %></p>
    
    <div class="edit justify-content-end">
    <%= link_to edit_post_path do %>
    <i class="fa fa-pencil-square-o fa-2x mr-4" aria-hidden="true"></i>
    <% end %>
    
    <%= link_to post_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-times fa-2x" aria-hidden="true"></i>
    <% end %>
        
    </div>
    <!--업로드할때 작성한 내용 출력-->
    
    </div>
    <!-- 댓글 창-->
   
    </div>
</div>
</body>
